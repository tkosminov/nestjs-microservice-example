{
  "name": "micro",
  "version": "1.0.0",
  "description": "",
  "author": "t.kosminov",
  "private": true,
  "packageManager": "yarn@4.0.1",
  "workspaces": [
    "./projects/*"
  ],
  "scripts": {
    "lint": "./node_modules/.bin/eslint \"projects/**/*.ts\"",
    "lint:fix": "./node_modules/.bin/eslint \"projects/**/*.ts\" --fix",
    "test": "concurrently -c \"auto\" \"yarn:test:*\"",
    "start": "concurrently -c \"auto\" \"yarn:start:*(!repl)\"",
    "test:graphql": "yarn workspace @micro/api-graphql test",
    "build:graphql": "yarn workspace @micro/api-graphql build",
    "start:graphql": "yarn workspace @micro/api-graphql start:dev",
    "test:customer": "yarn workspace @micro/service-customer test",
    "build:customer": "yarn workspace @micro/service-customer build",
    "start:customer": "yarn workspace @micro/service-customer start:dev"
  },
  "dependencies": {
    "@golevelup/nestjs-discovery": "^4.0.0",
    "@golevelup/nestjs-rabbitmq": "^4.0.0",
    "@nestjs/axios": "^3.0.0",
    "@nestjs/common": "10.2.5",
    "@nestjs/core": "10.2.5",
    "@nestjs/graphql": "^12.0.9",
    "@nestjs/microservices": "10.2.5",
    "@nestjs/typeorm": "^10.0.0",
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv-flow": "^3.3.0",
    "graphql": "^16.8.0",
    "graphql-scalars": "^1.22.2",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^3.3.6",
    "nestjs-graphql-easy": "^3.1.2",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.17",
    "typeorm-extension": "^3.0.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.1.17",
    "@nestjs/schematics": "^10.0.2",
    "@nestjs/testing": "^10.2.5",
    "@types/bcryptjs": "^2.4.4",
    "@types/body-parser": "^1.19.2",
    "@types/cookie-parser": "^1.4.4",
    "@types/dotenv-flow": "^3.3.1",
    "@types/eslint": "^8",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.6.0",
    "@types/nodemon": "^1.19.2",
    "@types/uuid": "^9.0.3",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "concurrently": "^8.2.1",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.4.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.2.2"
  }
